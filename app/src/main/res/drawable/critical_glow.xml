<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/glow_red" />
            <size
                android:width="40dp"
                android:height="40dp" />
        </shape>
    </item>
    
    <!-- Inner core -->
    <item
        android:top="8dp"
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp">
        <shape android:shape="oval">
            <solid android:color="@color/critical_red" />
        </shape>
    </item>
</layer-list>

