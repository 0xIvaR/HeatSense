<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HeatSense" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cpu_cyan</item>
        <item name="colorPrimaryVariant">@color/cpu_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/battery_amber</item>
        <item name="colorSecondaryVariant">@color/battery_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Transparent status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Dark background -->
        <item name="android:windowBackground">@android:color/black</item>
        <!-- SF Pro Font Family -->
        <item name="android:fontFamily">@font/sf_pro</item>
        <item name="fontFamily">@font/sf_pro</item>
    </style>
</resources> 